if theme.comment
    if theme.comment.type == 'gitalk'
        link(href='//cdn.staticfile.org/gitalk/1.3.3/gitalk.min.css' type='text/css' rel='stylesheet')
        script(src='//cdn.staticfile.org/gitalk/1.3.3/gitalk.min.js')
        div#comments(style="margin-left: 10px; margin-right: 10px;")
        script.
            const gitalk = new Gitalk({
                clientID: '#{theme.comment.gitalk.clientId}',
                clientSecret: '#{theme.comment.gitalk.clientSecret}',
                repo: '#{theme.comment.gitalk.repo}',
                owner: '#{theme.comment.gitalk.githubId}',
                admin: ['#{theme.comment.gitalk.githubId}'],
                id: '#{page.title}', // Ensure uniqueness and length less than 50
                distractionFreeMode: false,  // Facebook-like distraction free mode
                createIssueManually: true
            })
            gitalk.render('comments')
    if theme.comment.type == 'changyan'
        div#comments(style='padding-left:20px; padding-right:20px;')
            div#SOHUCS(sid=page.title style='margin-left: 10px; margin-right: 10px;')
            script(src='//changyan.sohu.com/upload/changyan.js')
            script.
                window.changyan.api.config({
                    appid: '#{theme.comment.changyan.appid}',
                    conf: '#{theme.comment.changyan.conf}'
                });
