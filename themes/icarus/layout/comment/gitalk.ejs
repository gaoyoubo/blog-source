<link rel="stylesheet" href="//cdn.staticfile.org/gitalk/1.3.3/gitalk.min.css">
<script src="//cdn.staticfile.org/gitalk/1.3.3/gitalk.min.js"></script>
<div id="comments"></div>
<script>
    const gitalk = new Gitalk({
        clientID: '<%= theme.comment.gitalk.clientId %>',
        clientSecret: '<%= theme.comment.gitalk.clientSecret %>',
        repo: '<%= theme.comment.gitalk.repo %>',
        owner: '<%= theme.comment.gitalk.githubId %>',
        admin: ['<%= theme.comment.gitalk.githubId %>'],
        id: '<%= post.title %>', // Ensure uniqueness and length less than 50
        distractionFreeMode: false, // Facebook-like distraction free mode
        createIssueManually: true
    })
    gitalk.render('comments')
</script>