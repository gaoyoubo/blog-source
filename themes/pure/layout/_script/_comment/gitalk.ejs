<% if (typeof(script) !== 'undefined' && script) { %>
<link rel="stylesheet" href="https://unpkg.com/gitalk/dist/gitalk.css">
<script src="https://unpkg.com/gitalk/dist/gitalk.min.js"></script>
<script>
const gitalk = new Gitalk({
  clientID: '<%= theme.comment.gitment.ClientID %>',
  clientSecret: '<%= theme.comment.gitment.ClientSecret %>',
  repo: '<%= theme.comment.gitment.repo %>',
  owner: '<%= theme.comment.gitment.githubID %>',
  admin: ['gaoyoubo'],
  id: '<%= post.title %>', // Ensure uniqueness and length less than 50
  distractionFreeMode: false  // Facebook-like distraction free mode
})
gitalk.render('comments')
</script>
<% } else { %>

<% } %>
